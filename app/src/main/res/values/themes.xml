<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlocoDeNotas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amarelo</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarelo</item>
        <item name="colorSecondaryVariant">@color/amarelo</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:colorControlNormal">#000000</item>
    </style>

    <style name="CustomToolbarStyle2">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
        <item name="android:itemTextAppearance">@style/menu_item_color</item>

    </style>

    <style name="menu_item_color">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>